<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonSwitchTAB"
        android:layout_alignEnd="@+id/buttonSwitchTAB"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonSwitchTAB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/image_for_item_button_marginHorizontal"
        android:shadowRadius="3"
        android:text="@string/button_text"
        android:background="@color/colorBlue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/image_for_item_button_marginBottom"/>
</RelativeLayout>